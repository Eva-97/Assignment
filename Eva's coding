    //"simple interest"
        var
        p=100000
        i=0.1
        n=2
        var bankA=p*i*n;
        console.log("Simple Interest of bank A is",bankA);
        //"compound interest"
        var
        p=100000
        i=0.025
        n=2
        var bankB=p*[(1+i)**n-1];
        console.log("Compound Interest of bank B is",bankB);
        var diff=bankA-bankB
        console.log("Since the difference between bank A and B is",diff)
            console.log("I'll advice Mr. Joseph to go for bank B,which is due to the lower monthly interest of:",bankB)
        
